@import url("https://fonts.googleapis.com/css?family=Open+Sans:300,400");

:root {
  --background-color: {{{backgroundColor}}};
  --text-color: {{{textColor}}};
  --background-image: {{{backgroundImage}}};
  --left-panel-width: {{{leftPanelWidth}}};
}

